<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/discussion_board_question_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textSize="17dp"
        android:textColor="#f9f93d" />

    <Button
        android:id="@+id/discussion_board_write_answer_button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/discussion_board_question_text"
        android:layout_centerHorizontal="true"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:focusable="false"
        android:text="@string/answer_button_text" />

    <Button
        android:id="@+id/discussion_board_edit_question_button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/discussion_board_question_text"
        android:layout_toRightOf="@id/discussion_board_write_answer_button"
        android:layout_centerHorizontal="true"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:focusable="false"
        android:visibility="visible"
        android:text="@string/edit_question_button_text" />

    <TextView
        android:id="@+id/dicussion_board_question_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/discussion_board_write_answer_button"
        android:textSize="17dp" />

</RelativeLayout>